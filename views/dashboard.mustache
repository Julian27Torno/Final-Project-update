<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
       <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        /* Sidebar styling */
        .sidebar {
            background: linear-gradient(180deg, #1BC78C, #0F7954);
            height: 100vh;
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            padding-top: 30px;
            color: #fff;
            box-shadow: 2px 0px 10px rgba(0, 0, 0, 0.2);
        }

        .sidebar h4 {
            font-size: 1.25rem;
            text-align: center;
            color: #fff;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .sidebar hr {
            border-color: rgba(255, 255, 255, 0.2);
        }

        .sidebar a {
            color: #fff;
            text-decoration: none;
            padding: 12px 20px;
            display: flex;
            align-items: center;
            gap: 10px;
            border-radius: 4px;
            margin-bottom: 5px;
            font-size: 0.95rem;
            transition: all 0.3s ease;
        }

        .sidebar a:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

        .sidebar a.active {
            background-color: rgba(255, 255, 255, 0.2);
        }

        .content {
            margin-left: 270px;
            padding: 20px;
        }

        .overview-card {
            padding: 20px;
            text-align: center;
            color: #fff;
            border-radius: 8px;
        }

        .overview-card .card-title {
            font-size: 1.5rem;
        }

        .overview-card .card-text {
            font-size: 2rem;
            font-weight: bold;
        }

        /* Clock styling */
        .clock {
            position: absolute;
            top: 20px;
            right: 20px;
            font-size: 1.25rem;
            font-weight: bold;
            color: #555;
        }

        @media (max-width: 768px) {
            .sidebar {
                width: 100%;
                height: auto;
                position: relative;
            }

            .content {
                margin-left: 0;
                padding: 10px;
            }

            .clock {
                top: 10px;
                right: 10px;
                font-size: 1rem;
            }
        }
    </style>
</head>

<body class="bg-light">

    <div class="d-flex flex-column flex-md-row">
        <!-- Sidebar Navigation -->
        <div class="sidebar">
            <h4>Patient Records</h4>
            <hr>
            <a href="/dashboard" class="active"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
            <a href="/patients"><i class="fas fa-table"></i> Patient Records Table</a>
            <a href="/add-records"><i class="fas fa-list-alt"></i> Add Records</a>
            <a href="/add-doctors"><i class="fas fa-user-plus"></i> Add Doctors</a>
            <a href="/user-logs"><i class="fas fa-file-alt"></i> User Logs</a>
            <a href="/outpatient"><i class="fas fa-notes-medical"></i> Outpatient Findings</a>
            <a href="/admission"><i class="fas fa-hospital"></i> Add admission</a>
             <a href="/admission-records" ><i class="bi bi-file-medical-fill"></i> Admission Record</a>
            <hr>
            <a href="/logout" ><i class="fas fa-sign-out-alt"></i> Logout</a>
            <a href="/users" ><i class="bi bi-person-plus-fill"></i> Add Users</a>
        </div>

        <!-- Main Content -->
        <div class="content">
            <!-- Clock -->
            <div class="clock" id="clock"></div>

            <div class="container-fluid">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1>Dashboard</h1>
            
                </div>

                <!-- Overview Cards -->
                <!-- Overview Charts -->
<!-- Overview Charts -->
<div class="row mb-4">
    <div class="col-md-3">
        <canvas id="totalPatientsChart"></canvas>
    </div>
    <div class="col-md-3">
        <canvas id="newPatientsTodayChart"></canvas>
    </div>
    <div class="col-md-3">
        <canvas id="pendingUpdatesChart"></canvas>
    </div>
    <div class="col-md-3">
        <canvas id="userLogsChart"></canvas>
    </div>
</div>



                <!-- Recent Records -->
                <div class="table-container mb-4">
                    <h2>Recent Patient Records</h2>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Case No.</th>
                                <th>Name</th>
                                <th>Gender</th>
                                <th>Age</th>
                                <th>Contact No.</th>
                                <th>Date Added</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#recent_patients}}
                            <tr>
                                <td>P-{{case_no}}</td>
                                <td>{{first_name}} {{last_name}}</td>
                                <td>{{gender}}</td>
                                <td>{{age}}</td>
                                <td>{{contact_no}}</td>
                                <td>{{date_added}}</td>
                            </tr>
                            {{/recent_patients}}
                            {{^recent_patients}}
                            <tr>
                                <td colspan="6" class="text-center">No recent records found.</td>
                            </tr>
                            {{/recent_patients}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
<script>
    // Data for the charts (replace with actual values from your backend)
    const totalPatientsData = {
        labels: ['Total Patients'],
        datasets: [{
            label: 'Total Patients',
            data: [{{total_patients}}], // Replace with dynamic data
            backgroundColor: '#007bff',
            borderColor: '#0056b3',
            borderWidth: 1
        }]
    };

    const newPatientsTodayData = {
        labels: ['New Patients Today'],
        datasets: [{
            label: 'New Patients Today',
            data: [{{new_patients_today}}], // Replace with dynamic data
            backgroundColor: '#28a745',
            borderColor: '#218838',
            borderWidth: 1
        }]
    };

    const pendingUpdatesData = {
        labels: ['Pending Updates'],
        datasets: [{
            label: 'Pending Updates',
            data: [{{pending_updates}}], // Replace with dynamic data
            backgroundColor: '#ffc107',
            borderColor: '#e0a800',
            borderWidth: 1
        }]
    };

    const userLogsData = {
        labels: ['User Logs'],
        datasets: [{
            label: 'User Logs',
            data: [{{user_logs_count}}], // Replace with dynamic data
            backgroundColor: '#dc3545',
            borderColor: '#c82333',
            borderWidth: 1
        }]
    };

    // Chart configurations
    const chartOptions = {
        responsive: true,
        scales: {
            y: {
                beginAtZero: true
            }
        }
    };

    // Render the charts
    window.onload = function () {
        // Total Patients Chart
        new Chart(document.getElementById('totalPatientsChart'), {
            type: 'bar',
            data: totalPatientsData,
            options: chartOptions
        });

        // New Patients Today Chart
        new Chart(document.getElementById('newPatientsTodayChart'), {
            type: 'bar',
            data: newPatientsTodayData,
            options: chartOptions
        });

        // Pending Updates Chart
        new Chart(document.getElementById('pendingUpdatesChart'), {
            type: 'bar',
            data: pendingUpdatesData,
            options: chartOptions
        });

        // User Logs Chart
        new Chart(document.getElementById('userLogsChart'), {
            type: 'bar',
            data: userLogsData,
            options: chartOptions
        });
    };
</script>

    <script>
        // Function to update the clock every second
        function updateClock() {
            const clockElement = document.getElementById('clock');
            const now = new Date();
            const hours = String(now.getHours()).padStart(2, '0');
            const minutes = String(now.getMinutes()).padStart(2, '0');
            const seconds = String(now.getSeconds()).padStart(2, '0');
            clockElement.textContent = `${hours}:${minutes}:${seconds}`;
        }

        setInterval(updateClock, 1000); // Update the clock every second
        updateClock(); // Initialize clock on page load
    </script>
</body>

</html>
