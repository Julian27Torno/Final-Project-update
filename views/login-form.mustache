<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
     <link rel="icon" href="images/logo.png" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <style>
        body {
            background: linear-gradient(135deg, #1BC78C, #0F7954);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-card {
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 30px;
            width: 100%;
            max-width: 400px;
        }

        .form-control {
            background-color: #FFF7D1;
            border-radius: 5px;
            border: 1px solid #ced4da;
        }

        .btn-login {
            background-color: #0F7954;
            color: white;
            border-radius: 5px;
        }

        .btn-login:hover {
            background-color: #1BC78C;
        }

        .forgot-password,
        .login-standard {
            display: block;
            margin-top: 10px;
        }

        .logo {
            display: block;
            margin: 0 auto 20px auto;
            max-width: 100px;
        }
    </style>
</head>

<body>

    <div class="login-card">
        <!-- Logo section -->
        <img src="../images/logo.png
        " alt="Hospital Logo" class="logo">

        <!-- Title section -->
        <h3 class="text-center mb-4">Patient Record Management System</h3>

        <!-- Error alert -->
        <div class="alert alert-danger {{^errors}}d-none{{/errors}}" role="alert">
            <ul class="mb-0">
                {{#errors}}
                <li>{{.}}</li>
                {{/errors}}
            </ul>
        </div>

        <!-- Login form -->
        <form action="/login" method="POST">
            <div class="mb-3">
                <label for="username" class="form-label">Username:</label>
                <input type="text" class="form-control" name="username" id="username" required
                    {{#disabled}}disabled{{/disabled}}>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password:</label>
                <input type="password" class="form-control" name="password" id="password" required
                    {{#disabled}}disabled{{/disabled}}>
            </div>

            <!-- Login button -->
            <div class="d-grid">
                <button type="submit" class="btn btn-login" {{#disabled}}style="display:none;"
                    {{/disabled}}>Login</button>
            </div>
        </form>

        <!-- Forgot password and login options -->
        <!-- <a href="#" class="forgot-password text-center">Forgot Password?</a>
        <a href="#" class="login-standard text-center">Login to Standard account</a> -->
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
        </script>

</body>

</html>