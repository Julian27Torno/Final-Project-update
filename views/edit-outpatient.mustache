<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Patient Record</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4>Edit Patient Record || P-{{case_number}} || {{first_name}} {{last_name}}</h4>
            </div>
            <div class="card-body">
                <!-- Form for Updating the Patient Record -->
                <form action="/update-outpatient/{{id}}" method="post">
                    <div class="mb-3">
                         <label for="history_present_illness" class="form-label"><strong>History of Present Illness</strong></label> <br>
                        <label for="location" class="form-label">Location</label>
                        <input type="text" class="form-control" id="location" name="location" value="{{location}}" required>
                    </div>
                    <div class="mb-3">
                        <label for="quality" class="form-label">Quality</label>
                        <input type="text" class="form-control" id="quality" name="quality" value="{{quality}}" required>
                    </div>
                     <div class="mb-3">
                        <label for="severity" class="form-label">Severity</label>
                        <input type="text" class="form-control" id="severity" name="severity" value="{{severity}}">
                    </div>
                    <div class="mb-3">
                        <label for="duration" class="form-label">Duration</label>
                        <input type="text" class="form-control" id="duration" name="duration" value="{{duration}}">
                    </div>
                    <hr>
                     <label for="vital signs" class="form-label"><strong>Vital Signs</strong></label> <br>
                    <div class="mb-3">
                        <label for="blood_pressure" class="form-label">Blood Pressure</label>
                        <input type="text" class="form-control" id="blood_pressure" name="blood_pressure" value="{{blood_pressure}}" required>
                    </div>
                    <div class="mb-3">
                        <label for="blood_pressure" class="form-label">Pulse Rate</label>
                        <input type="text" class="form-control" id="blood_pressure" name="blood_pressure" value="{{blood_pressure}}" required>
                    </div>
                    <div class="mb-3">
                        <label for="temperature" class="form-label">Temperature</label>
                        <input type="text" class="form-control" id="temperature" name="temperature" value="{{temperature}}" required>
                    </div>
                    <div class="mb-3">
                        <label for="oxygen_saturation" class="form-label">Oxygen Saturation</label>
                        <input type="text" class="form-control" id="oxygen_saturation" name="oxygen_saturation" value="{{oxygen_saturation}}" required>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-success">Update Record</button>
                        <a href="/outpatient" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>

                <!-- Separate Form for Deleting the Patient Record -->
                <form action="/outpatients/delete/{{id}}" method="POST" onsubmit="return confirm('Are you sure you want to delete this record?');" style="margin-top: 15px; text-align: center;">
                    <button type="submit" class="btn btn-danger">Delete Record</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
