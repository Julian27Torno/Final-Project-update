<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Patient Record</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">
    <div class="container mt-5">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4>Patient Details || P-{{case_number}} || {{first_name}} {{last_name}}</h4>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tr>
                        <th>Case No.</th>
                        <td>P-{{case_number}}</td>
                    </tr>
                    <tr>
                        <th>Date</th>
                        <td>{{date}}</td>
                    </tr>
                    <tr>
                        <th>Location</th>
                        <td>{{location}}</td>
                    </tr>
                    <tr>
                        <th>Quality</th>
                        <td>{{quality}}</td>
                    </tr>
                    <tr>
                        <th>Severity</th>
                        <td>{{severity}}</td>
                    </tr>
                    <tr>
                        <th>Duration</th>
                        <td>{{duration}}</td>
                    </tr>
                    <tr>
                        <th>Diagnosis</th>
                        <td>{{diagnosis}}</td>
                    </tr>
                    <tr>
                        <th>Blood Pressure</th>
                        <td>{{blood_pressure}}</td>
                    </tr>
                    <tr>
                        <th>Respiratory Rate</th>
                        <td>{{respiratory_rate}}</td>
                    </tr>
                    <tr>
                        <th>Oxygen Saturation</th>
                        <td>{{oxygen_saturation}}</td>
                    </tr>
                     <tr>
                        <th>Temperature</th>
                        <td>{{temperature}}</td>
                    </tr>
                    <tr>
                        <th>Treatment</th>
                        <td>{{medication_treatment}}</td>
                    </tr>
                    <tr>
                        <th>Attending Physician</th>
                        <td>{{attending_physician}}</td>
                    </tr>
                    <tr>
                        <th>Created At</th>
                        <td>{{created_at}}</td>
                    </tr>
                </table>
                <div class="text-center">
                    <a href="/outpatient" class="btn btn-secondary">Back to Outpatient Findings</a>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
